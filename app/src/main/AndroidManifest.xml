<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ts.samples_event_bus">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">


        <activity
            android:name="event_bus.activities.ActivityLauncher"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="event_bus.activities.ActivitySubscriber"
            android:screenOrientation="portrait" />

        <activity
            android:name="event_bus.activities.ActivityReceiver"
            android:screenOrientation="portrait" />

        <activity
            android:name="event_bus.fragments.FragmentActivitySubscriber"
            android:screenOrientation="portrait" />

        <service android:name="event_bus.services.ServiceSubscriber" />

    </application>

</manifest>
